PKG_CPPFLAGS = -I. -I../inst/include -I/usr/local/opt/gsl/include `gsl-config --cflags` -I$(SHLIB_OPENMP_CPPFLAGS) -fopenmp
## Use the R_HOME indirection to support installations of multiple R version
PKG_LIBS = `$(R_HOME)/bin/Rscript -e "RcppGSL:::LdFlags()" $(SHLIB_OPENMP_CFLAGS) -L/usr/local/opt/gsl/lib -lgsl -lgslcblas -lgsl -lgomp`
